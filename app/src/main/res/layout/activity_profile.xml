<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profileActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/topbackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/adamina"
                android:text="Profile"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/profilebackground"
                android:clipToOutline="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="-25dp"
                android:layout_marginTop="50dp"
                app:srcCompat="@drawable/baseline_camera_alt_24"
                android:background="@drawable/profilecamera"
                android:padding="5dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@drawable/restaurantshomepagedetailbackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_account_circle_24"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/restaurantshomepagedetailbackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/baseline_call_24" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="TextView"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/restaurantshomepagedetailbackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/address"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textView54"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/restaurantshomepagedetailbackground"></LinearLayout>
</LinearLayout>